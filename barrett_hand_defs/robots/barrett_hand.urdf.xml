<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="standalone_barrett_hand">

  <xacro:include filename="$(find barrett_hand_defs)/defs/barret_hand.urdf.xacro"/>
<!--  <include filename="$(find barrett_hand_defs)/defs/materials.xml"/>-->

   <link name="world" />

  <joint name="arm_world_joint" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="world_link"/>
  </joint>

  <link name="world_link">
    <inertial>
      <mass value="50.0"/>
      <com xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0.00" ixz="0.00"
                iyy="0.01" iyz="0.00"
                izz="0.01" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0.50" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 1.0"/>
      </geometry>
    </collision>
  </link>
  
  <xacro:barret_hand prefix="right" parent="world_link">
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
  </xacro:barret_hand>

</robot>
